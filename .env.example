# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secret Key (REQUIRED - change this to a random secure string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin API Key (for admin endpoints)
ADMIN_API_KEY=your-admin-api-key-here

# Database
# Default (SQLite file, simple deploy & local dev)
DATABASE_URL=file:./dev.db
# Optional (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/safeapi_bridge

# Redis Cache (optional - will use in-memory fallback if not provided)
# Required for token blacklist (logout functionality)
REDIS_URL=redis://localhost:6379

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# Anthropic Claude API
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
CLAUDE_BASE_URL=https://api.anthropic.com/v1

# Other AI APIs (optional)
# GROQ_API_KEY=your-groq-api-key-here
# MISTRAL_API_KEY=your-mistral-api-key-here
# COHERE_API_KEY=your-cohere-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Allowed Origins for CORS (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Allow native mobile clients without Origin header (true/false)
ALLOW_MOBILE_NO_ORIGIN=true

# Security Logging (Winston)
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=30d
